!!! Strict
%html{"xmlns"=>"http://www.w3.org/1999/xhtml", "lang"=>"en"}
  %head
    = javascript_include_tag "application","prototype", "scriptaculous"
    = @other_javascript_include
    
    = stylesheet_link_tag "style"
    = @other_css_links
  
    %meta{"http-equiv"=>"Content-Type", "content"=>"text/html;charset=iso-8859-1"}/
    %title= "Rescribo: Query Rewriter"
    %meta{"name"=>"description", |
          "content"=>"Riscrittura query SPARQL mediante meccanismi di astrazione"}/
    %meta{"name"=>"robots", "content"=>"all"}/
  
  %body
    #header= render( :partial => 'layouts/header')
    #container
      - if flash[:notice]
        %p.notice= flash[:notice]
      - if flash[:notice_ok]
        %p.notice_ok= flash[:notice_ok]
      - if flash[:notice_bad]
        %p.notice_bad= flash[:notice_bad]
      = yield :layout
    #footer= render( :partial => 'layouts/footer')
		
