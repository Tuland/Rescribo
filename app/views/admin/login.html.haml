- @header = "Login"

%div#form
  %div.part
    - form_tag do
      %fieldset
        %legend= "Please Log In"
        %div
          %label{:for => 'name'}= "Name"
          = text_field_tag :name, params[:name] 
        %div
          %label{:for => 'password'}= "Password"
          = password_field_tag :password, params[:password]
        %div.submitter
        = submit_tag "Login"

%div.links_list    
  =link_to "Register", :controller => "users", :action => "new"